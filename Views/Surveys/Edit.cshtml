@model SurveyEditModel

<div class="row mt-5">
    <h3 class="text-center">Denetim Düzenleme Formu</h3>
    <h5 class="mt-5">Denetim Adı: @Model.Name</h5>
    <hr />
    <div class="col-md-6 border-end border-dark">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Sorular</th>
                </tr>
            </thead>
            <tbody class="table-group-divider">
                @foreach (var question in Model.Questions)
                {
                    <tr>
                        <td>@question.Name</td>
                        <td class="text-end">
                            <a href="/survey/@Model.Id/addQuestion/@question.Id" class="btn btn-sm btn-primary">Ekle</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-md-6 border-dark">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Denetim Soruları</th>
                </tr>
            </thead>
            <tbody class="table-group-divider">
                @foreach (var surveyQuestion in Model.SurveyQuestions)
                {
                    <tr>
                        <td>@surveyQuestion.Name</td>
                        <td class="text-end">
                            <a href="/survey/@Model.Id/removeQuestion/@surveyQuestion.Id" class="btn btn-sm btn-danger">Çıkar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
