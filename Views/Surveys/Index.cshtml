@model List<SurveyListModel>

<div class="mt-5 col-md-6 offset-md-3">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Denetim Adı</th>
                <th class="text-end">
                    <a href="/surveys/create" class="btn btn-sm btn-success">Denetim Ekle</a>
                </th>
            </tr>
        </thead>
        <tbody class="table-group-divider">
            @foreach (var survey in Model)
            {
                <tr>
                    <td>@survey.Name</td>
                    <td class="text-end">
                        <a href="/surveys/edit/@survey.Id" class="btn btn-sm btn-primary">Düzenle</a>
                        <a href="/surveys/delete/@survey.Id" class="btn btn-sm btn-danger">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>